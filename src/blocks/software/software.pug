//- Создает блок software

//- Принимает:
  object - список чисел
    object.photoshop {number}     - уровень владения photoshop
    object.dreamweaver {number}   - уровень владения dreamweaver
    object.illustrator {number}   - уровень владения illustrator
    object.afterEffects {number}  - уровень владения after effects
    object.indesign {number}      - уровень владения indesign
    object.htmlCss {number}       - уровень владения html и css

//- Вызов:
  software+({photoshop: 91, dreamweaver: 82, illustrator: 71, afterEffects: 62, indesign: 56, htmlCss: 90})

mixin software({photoshop = 91, dreamweaver = 82, illustrator = 71, afterEffects = 62, indesign = 56, htmlCss = 90} = {})
  -
    if (!isValidArg(photoshop)) photoshop = 91
    if (!isValidArg(dreamweaver)) dreamweaver = 82
    if (!isValidArg(illustrator)) illustrator = 71
    if (!isValidArg(indesign)) indesign = 56
    if (!isValidArg(htmlCss)) htmlCss = 90

  //- Проверяет на допустимость переданное значение
    Принимает:
      arg {number} число от 0 до 100 включительно
    Возвращает:
    true | false
  -
    function isValidArg(arg) {
      if (typeof arg != "number" || arg < 0 || arg > 100) return false;
      return true;
    }

  section.software
    h2.software__title.block-title Software
    ul.software__list
      li.software__list-item
        h3.software__item-title Photoshop
        .software__progress
          .software__progress-fill(style = {width: photoshop + "%"})

      li.software__list-item
        h3.software__item-title Dreamweaver
        .software__progress
          .software__progress-fill(style = {width: dreamweaver + "%"})

      li.software__list-item
        h3.software__item-title Illustrator
        .software__progress
          .software__progress-fill(style = {width: illustrator + "%"})

      li.software__list-item
        h3.software__item-title After effects
        .software__progress
          .software__progress-fill(style = {width: afterEffects + "%"})

      li.software__list-item
        h3.software__item-title Indesign
        .software__progress
          .software__progress-fill(style = {width: indesign + "%"})

      li.software__list-item
        h3.software__item-title Html&css
        .software__progress
          .software__progress-fill(style = {width: htmlCss + "%"})
